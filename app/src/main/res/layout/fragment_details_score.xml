<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_sat_school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Invalid SchoolName"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textAlignment="center"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/gl_top"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintEnd_toEndOf="@id/gl_end"/>

    <TextView
        android:id="@+id/tv_sat_school_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/gl_end"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="@+id/gl_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_sat_school_name"
        tools:text="No overview"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_school_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/gl_end"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/gl_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_sat_school_overview"
        tools:text="No address"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_takers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_school_address"
        tools:text="Takers"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_averages_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average SAT Scores"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_takers"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_avg_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Reading: ----"
        android:textSize="20sp"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tv_averages_title"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"/>
    <TextView
        android:id="@+id/tv_avg_math"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Math: ----"
        android:textSize="20sp"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tv_avg_reading"
        app:layout_constraintStart_toStartOf="@id/tv_avg_reading"/>
    <TextView
        android:id="@+id/tv_avg_writing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Writing: ----"
        android:textSize="20sp"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/tv_avg_math"
        app:layout_constraintStart_toStartOf="@id/tv_avg_reading"/>

    <TextView
        android:id="@+id/tv_sat_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading Scores"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.329" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"/>


</androidx.constraintlayout.widget.ConstraintLayout>